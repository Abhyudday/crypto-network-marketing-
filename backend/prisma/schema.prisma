generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserLevel {
  STARTER
  BEGINNER
  INVESTOR
  VIP
  VVIP
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  PROFIT
  BONUS
}

model User {
  id                String   @id @default(cuid())
  username          String   @unique
  email             String   @unique
  phone             String
  password          String
  level             UserLevel @default(STARTER)
  balance           Float    @default(0)
  totalDeposit      Float    @default(0)
  referralCode      String   @unique
  referrerId        String?
  emailVerified     Boolean  @default(false)
  verificationToken String?
  isAdmin           Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  referrer          User?    @relation("Referrals", fields: [referrerId], references: [id])
  referrals         User[]   @relation("Referrals")
  
  transactions      Transaction[]
  profitHistory     ProfitHistory[]
  bonusHistory      BonusHistory[]
  networkNodes      NetworkNode[]     @relation("UserNetwork")
  parentNodes       NetworkNode[]     @relation("ParentNetwork")

  @@index([referralCode])
  @@index([referrerId])
}

model Transaction {
  id              String            @id @default(cuid())
  userId          String
  amount          Float
  type            TransactionType
  status          TransactionStatus @default(PENDING)
  txHash          String?
  walletAddress   String?
  remarks         String?
  approvedBy      String?
  approvedAt      DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user            User              @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([type])
}

model NetworkNode {
  id              String   @id @default(cuid())
  userId          String
  parentId        String
  level           Int
  createdAt       DateTime @default(now())

  user            User     @relation("UserNetwork", fields: [userId], references: [id])
  parent          User     @relation("ParentNetwork", fields: [parentId], references: [id])

  @@unique([userId, parentId])
  @@index([parentId])
  @@index([level])
}

model ProfitHistory {
  id              String   @id @default(cuid())
  userId          String
  profitPercent   Float
  profitAmount    Float
  tradingDate     DateTime
  distributedAt   DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([tradingDate])
}

model BonusHistory {
  id              String   @id @default(cuid())
  userId          String
  bonusAmount     Float
  bonusType       String
  sourceUserId    String?
  level           Int?
  calculatedFrom  Float?
  description     String?
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model TradingResult {
  id              String   @id @default(cuid())
  tradingDate     DateTime @unique
  profitPercent   Float
  description     String?
  processedAt     DateTime?
  createdBy       String
  createdAt       DateTime @default(now())

  @@index([tradingDate])
}

model SystemConfig {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String
  description     String?
  updatedAt       DateTime @updatedAt
}

model AdminAction {
  id              String   @id @default(cuid())
  adminId         String
  actionType      String
  targetId        String?
  details         String?
  ipAddress       String?
  createdAt       DateTime @default(now())

  @@index([adminId])
  @@index([actionType])
}
